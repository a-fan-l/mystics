{
  "name": "mystics-monorepo",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build",
    "build:ui": "lerna run build --scope=@mystics/ui",
    "build:hooks": "lerna run build --scope=@mystics/hooks", 
    "build:libs": "lerna run build --scope=@mystics/libs",
    "build:cli": "lerna run build --scope=@mystics/cli",
    "clean": "lerna run clean",
    "storybook": "lerna run storybook --scope=@mystics/ui",
    "build-storybook": "lerna run build-storybook --scope=@mystics/ui",
    "version:bump": "lerna version",
    "publish:script": "bash scripts/publish.sh",
    "publish:dry": "bash scripts/publish.sh --dry-run",
    "publish:local": "bash scripts/publish.sh --registry http://localhost:4873",
    "publish:local:dry": "bash scripts/publish.sh --registry http://localhost:4873 --dry-run",
    "publish:remote": "bash scripts/publish.sh --registry http://192.168.1.100:4873",
    "publish:remote:dry": "bash scripts/publish.sh --registry http://192.168.1.100:4873 --dry-run",
    "publish:npm": "bash scripts/publish.sh --registry https://registry.npmjs.org",
    "publish:npm:dry": "bash scripts/publish.sh --registry https://registry.npmjs.org --dry-run",
    "lerna:local": "lerna publish --registry http://localhost:4873",
    "lerna:local:check": "lerna changed",
    "lerna:remote": "lerna publish --registry http://192.168.1.100:4873", 
    "lerna:remote:check": "lerna changed",
    "lerna:from-package:local": "lerna publish from-package --registry http://localhost:4873",
    "lerna:from-package:remote": "lerna publish from-package --registry http://192.168.1.100:4873",
    "lerna:from-package:npm": "lerna publish from-package --registry https://registry.npmjs.org",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "verdaccio:start": "bash scripts/deploy-verdaccio.sh",
    "verdaccio:stop": "docker compose down",
    "verdaccio:local": "bash scripts/local-verdaccio.sh",
    "dev:ui": "lerna run storybook --scope=@mystics/ui",
    "preinstall": "npx only-allow pnpm"
  },
  "keywords": [],
