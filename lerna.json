{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "independent",
  "packages": [
    "packages/*",
    "apps/*"
  ],
  "npmClient": "pnpm",
  "ignoreChanges": [
    "**/node_modules/**",
    "**/__snapshots__/**"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "registry": "http://localhost:4873",
      "access": "public",
      "ignoreChanges": ["**/*.md", "**/*.test.*", "**/test/**"],
      "forcePublish": false
    },
    "version": {
      "allowBranch": [
        "main",
        "master"
      ],
      "conventionalCommits": true,
      "push": false,
      "exact": true,
      "ignoreChanges": ["**/*.md", "**/*.test.*", "**/test/**"]
    }
  }
}